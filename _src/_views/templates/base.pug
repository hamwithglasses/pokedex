include ../toolkit/_toolkit.pug

-
	base.index = true;
	base.ver = '?v=1.0';
	base.url = '//kegh.am/pokedex';
	base.name = "Prof. Mackey's Pokedex";
	base.title = "Prof. Mackey's Pokedex";
	base.description = "A pokedex featuring Daniel Mackey's Pokemon art.";
	
	if(base.dev == true) {
		base.url = 'http://localhost:3000';
	}

block vars

doctype
html(lang="en")
	head
		+head()

		link(href=base.url + "/assets/img/favicon.png" rel="icon")
		link(href="https://fonts.googleapis.com/css?family=Chango|Racing+Sans+One" rel="stylesheet")
		link(href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css")
		
		+css(base.url + '/assets/css/main.min.css' + base.ver)
		
		block head
	body
		block body
		
		//Scripts
		script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
		script(src=base.url + '/assets/js/main.min.js' + base.ver)
		block scripts
